
@model Permit
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div style="font-size: 1.5em;">
        <div class="text-center">
            <div>
                <img src="~/assets/nmdpraLogo.png" alt="Logo" style="height: 250px; display: block; margin: 0 auto;" />
            </div>
            <div style="text-align: center;font-size: 2.5em; color: forestgreen;">
                <b>
                    NIGERIAN MIDSTREAM AND DOWNSTREAM PETROLEUM REGULATORY AUTHORITY
                </b>
            </div>
            <div style="color: forestgreen; text-align: center; margin-top: -1em;">
                <h1>BUNKERING VESSEL LICENSE</h1>
            </div>
        </div>
        <div style="float: right; position: relative; margin-top: 1em; margin-bottom: 1em;">
            <h2><span>BVL No:</span> <span style="padding: 0 50px 0 10px; font-weight: bold;">@Model.PermitNo</span></h2>
            <h2>IND: <span style=" padding: 0 40px 0 10px; font-weight: bold;">@Model.Application.User.Company.Name.Split(' ')[0].ToUpper()</span></h2>
        </div>
        <div style="width: 100%; text-align: center; position: absolute; top: 50%; margin-top: -400px;">
            <img src="~/assets/coat-of-arm.jpg" style="width: 820px; opacity: 0.1;" />
        </div>
        <br /> <br />
        <br /> <br />
        <br /> <br />
        <div style="font-size: 1.3em;">
            <span style="float: left">This License is hereby granted to:</span><span style="float: right; border-bottom: 2px dotted; text-align: center; width: 63%;">@Model.Application.User.Company.Name</span>
        </div>
        <div style="font-size: 1.3em; margin-top: 2.5em;">
            <span style="float: left">Of</span><span style="float: right; border-bottom: 2px dotted; text-align: center; width: 97%;">@Model.Application.User.Company.Address</span>
        </div>
        <div style="font-size: 1.3em; margin-top: 2em; text-align: center; ">
            <span style="width: 100%;">(Address of the Company)</span>
        </div>
        <div style="font-size: 1.3em; margin-top: 1em;">
            <span style="float: left"> To operate the Bunkering vessel of which particulars are given below:</span>
        </div>
        <div style="font-size: 1.3em; margin-top: 3em !important;">
            <span style="float: left">Name of Bunkering Vessel</span><span style="float: right; border-bottom: 2px dotted; text-align: center; width: 72%;">@Model.Application.User.Company.Address</span>
        </div>
        <br/>
        <div style="font-size: 1.3em; margin-top: 1em !important;">
            <span style="float: left">Dead Weight (metric tons)</span><span style="float: right; border-bottom: 2px dotted; text-align: center; width: 71%;">@Model.Application.User.Company.Address</span>
        </div>
        <div style="font-size: 1.3em; margin-top: 2em !important;">
            <span style="float: left">This License expires on the 31<sup>st</sup> of December</span>
            <span style="float: right; border-bottom: 2px dotted; text-align: center; width: 52%;">@Model.ExpireDate.ToString("yyyy")</span>
        </div>
        <div style="font-size: 1.3em; margin-top: 1em !important; margin-bottom: 3em !important;">
            <span style="float: left">Fees Paid:</span>
            <span style="float: right; text-align: center; width: 80%;">Annual non-refundable Vessel License Fees, $10,000.00,<br /> Verification Inspection Fee, $500.00</span>
        </div>
        @*<div style="font-size: 1.3em; margin-top: 4em !important;">
            <span style="float: left">Dated this</span>
            <span style="float: left; border-bottom: 2px dotted; width: 18%">@Model.IssuedDate.ToString("dd")<sup>@DateSub(Model.IssuedDate.Day)</sup></span>
            <span style="float: right;">day of</span>
            <span style="float: right; border-bottom: 2px dotted;">@Model.IssuedDate.ToString("MMMM")</span>
            <span style="float: right;">year</span>
            <span style="float: right; border-bottom: 2px dotted;">@Model.IssuedDate.Year</span>
        </div>
*@
        <table style="width: 100%; font-size: 1.3em;" >
            <tr>
                <td>Dated this</td>
                <td style="border-bottom: 2px dotted; width: inherit; !important;">
                    <b>@Model.IssuedDate.ToString("dd")<sup>@DateSub(Model.IssuedDate.Day)</sup> </b>
                </td>
                <td style="width: inherit;x"> day of</td>
                <td style="border-bottom: 2px dotted;width: inherit;">
                    <b>@Model.IssuedDate.ToString("MMMM")</b>
                </td>
                <td>year</td>
                <td style="border-bottom: 2px dotted; width: inherit;">
                    <b>@Model.IssuedDate.Year</b>
                </td>
            </tr>
        </table>
        <div style="margin-top: 2em;">
            <div style="float: left !important;">
                <img src="data:imaage/png;base64,@Model.QRCode" width="170" height="170" />
            </div>
            <div style="float: right !important;">
                <div class="text-center">
                    <img src="@Url.Content("/assets/fa.png")" height="130" />
                </div>
                <div style="font-size: large; text-align: center; border-top: dotted 2px; padding: 0 10px 0 10px;">
                    <span>Farouk A. Ahmed</span><br/>
                    <span>Authority Chief Executive</span>
                </div>

            </div>
        </div>
    </div>
</body>
</html>

@functions{
    private string DateSub(int day)
    {
        switch (day)
        {
            case 1:
            case 21:
            case 31:
                return "st";
            case 2:
            case 22:
                return "nd";
            case 3:
            case 23:
                return "rd";
            default:
                return "th";
        }
    }
}
